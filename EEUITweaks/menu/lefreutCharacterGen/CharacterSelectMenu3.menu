menu
{
	name 'CHARACTER_SELECT'
	align center center
	onopen "selectedCharacter = 0"
	ignoreesc
	onOpen
	"
		currentPage = 0
	"
	label
	{
		mosaic LUICGPR
		area 0 0 1024 768
	}
	label
	{
		area 64 16 898 44
		text "IMPORT_TITLE"
		text style "title"
	}

	label
	{
		enabled "character_select[currentPage + 1] ~= nil"
